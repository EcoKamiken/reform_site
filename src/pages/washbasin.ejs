<section class="section">
  <div class="container is-fluid">
    <h1 class="title is-3"><span class="underline-gray">商品ラインナップ</span></h1>
    <div class="columns is-multiline">
      <% for (key in washbasin['items']) { %>
      <% if(washbasin['items'][key].visible) { %>
      <div class="column has-text-centered">

        <div class="columns is-multiline">
          <div class="column is-12">
            <img src="<%= washbasin['items'][key].product_image %>"
              alt="<%= washbasin['items'][key].product_image_description %>" width="200" />
          </div>

          <div class="column is-12">
            <p class="has-text-left">
              <span class="has-text-weight-bold">
                <%= washbasin['items'][key].manufacturer + ' ' + washbasin['items'][key].series %>
              </span>
            </p>
            <p class="has-text-left">
              <%= washbasin['items'][key].description %>
            </p>
          </div>

          <div class="column is-12">
            <p class="is-size-6">
              希望小売価格 ￥<%= washbasin['items'][key].retail_price.toLocaleString() %>円
            </p>
            <p class="is-size-4">
              <span class="underline-red">
                ￥<%= washbasin['items'][key].price.toLocaleString() %>円
              </span>
            </p>
          </div>

          <hr>

        </div>
      </div>
      <% } %>
      <% } %>
    </div>

  </div>
</section>

<% include ../components/_footer %>