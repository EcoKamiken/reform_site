<section class="section">
  <div class="container is-fluid">
    <h1 class="title is-3"><span class="underline-gray">商品ラインナップ</span></h1>
    <div class="columns is-multiline">
      <% for (key in bath['items']) { %>
      <% if(bath['items'][key].visible) { %>
      <div class="column is-4 has-text-centered">

        <div class="columns is-multiline">
          <div class="column is-12">
            <img src="<%= bath['items'][key].product_image %>" alt="<%= bath['items'][key].product_image_description %>"
              width="200" />
          </div>

          <div class="column is-12">
            <p class="has-text-left">
              <span class="has-text-weight-bold">
                <%= bath['items'][key].manufacturer + ' ' + bath['items'][key].series %>
              </span>
            </p>
            <p class="has-text-left">
              <%= bath['items'][key].description %>
            </p>
          </div>

          <div class="column is-12">
            <p>1216 | 0.75坪サイズ</p>
            <!--
            <% if(bath['items'][key].retail_price[0] != 0) { %>
            <p class="is-size-6">
              希望小売価格 ￥<%= bath['items'][key].retail_price[0].toLocaleString() %>円
            </p>
            <% } %>
            -->
            <p class="is-size-4">
              <span class="underline-red">
                ￥<%= bath['items'][key].price[0].toLocaleString() %>円
              </span>
            </p>
          </div>

          <div class="column is-12">
            <p>1616 | 1坪サイズ</p>
            <!--
            <% if(bath['items'][key].retail_price[1] != 0) { %>
            <p class="is-size-6">
              希望小売価格 ￥<%= bath['items'][key].retail_price[1].toLocaleString() %>円
            </p>
            <% } %>
            -->
            <p class="is-size-4">
              <span class="underline-red">
                ￥<%= bath['items'][key].price[1].toLocaleString() %>円
              </span>
            </p>
          </div>

          <hr>

        </div>
      </div>
      <% } %>
      <% } %>
    </div>

  </div>
</section>

<% include ../components/_footer %>